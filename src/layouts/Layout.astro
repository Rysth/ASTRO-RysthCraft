---
import NavigationBar from "@/components/navigation/NavigationBar.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Desarrollador Web Full-Stack especializado en la creación de aplicaciones web, sitios web profesionales y tiendas en línea. Expertise en React, Astro, Ruby on Rails y Wordpress. Soluciones innovadoras y personalizadas para tu negocio en línea."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavigationBar />
    <slot />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
  </body>
</html>

<style is:global>
  @import url("https://fonts.cdnfonts.com/css/poppins");

  :root {
    --CL-primary: #3a3eab;
    --CL-secondary: #2a299e;
  }

  /* width */
  ::-webkit-scrollbar {
    width: 10px;
  }

  /* Track */
  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: var(--CL-primary);
    border-radius: 10rem;
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: #000;
  }

  body {
    font-family: "Poppins", sans-serif;
    background-color: white;
  }

  .bg-brand-blue {
    @apply bg-[var(--CL-primary)];
  }

  .bg-brand-gradient {
    @apply from-[var(--CL-primary)] to-[var(--CL-secondary)];
  }

  .text-brand-blue {
    @apply text-[var(--CL-primary)];
  }
</style>
