---
const { title, description, IconComponent, bgColorClass } = Astro.props;
---

<div
  class="flex flex-col items-center justify-center p-4 text-center border h-96 group"
>
  <header class="relative mb-6">
    <IconComponent className=" h-28 w-28 relative z-20" />
    <span
      class={`absolute z-10 w-14 h-14 transition duration-700 rounded-full ${bgColorClass} bottom-0 left-0 group-hover:-translate-y-14 group-hover:translate-x-14`}
    ></span>
  </header>
  <div class="space-y-4 h-28">
    <h4 class="text-xl font-semibold">{title}</h4>
    <p class="max-w-xs text-sm leading-6 text-gray-500">
      {description}
    </p>
  </div>
</div>
