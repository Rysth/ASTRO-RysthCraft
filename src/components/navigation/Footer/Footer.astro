---
import { Image } from "astro:assets";
import BrandImage from "../../../assets/images/brand/brand.svg";
import * as FaIcons from "react-icons/fa";
const { FaGithub, FaWhatsapp, FaInstagram, FaGoogle } = FaIcons;
---

<footer
  class="w-full max-w-screen-xl py-10 px-4 mx-auto bg-[var(--CL-primary-blue)] rounded-t-xl"
>
  <div class="text-center">
    <a
      href="/"
      class="flex items-center justify-center mx-auto space-x-3 max-w-max"
    >
      <Image src={BrandImage} class="w-28 sm:w-32" alt="Flowbite Logo" />
    </a>
    <div class="mt-3 text-sm">
      <p class="text-gray-200">
        Professional Full-Stack Developer | Astro, React, Ruby on Rails
      </p>
      <p class="text-gray-200">Â© RysthCraft. 2024. All rights reserved.</p>
    </div>

    <div class="mt-3 space-x-1">
      <a
        target="_blank"
        class="inline-flex items-center justify-center w-10 h-10 text-center text-gray-200 transition rounded-full hover:bg-white hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white dark:text-gray-200 dark:hover:text-gray-200 dark:hover:bg-gray-800"
        href="https://maps.app.goo.gl/o3AGmb5HsDcg4pqP6"
      >
        <FaGoogle />
      </a>

      <a
        target="_blank"
        class="inline-flex items-center justify-center w-10 h-10 text-center text-gray-200 transition rounded-full hover:bg-white hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white dark:text-gray-200 dark:hover:text-gray-200 dark:hover:bg-gray-800"
        href="https://github.com/Rysth"
      >
        <FaGithub />
      </a>
      <a
        target="_blank"
        class="inline-flex items-center justify-center w-10 h-10 text-center text-gray-200 transition rounded-full hover:bg-white hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white dark:text-gray-200 dark:hover:text-gray-200 dark:hover:bg-gray-800"
        href="https://www.instagram.com/rysthcraft/"
      >
        <FaInstagram />
      </a>
    </div>
  </div>
</footer>
