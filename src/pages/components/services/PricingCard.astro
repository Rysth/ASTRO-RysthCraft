---
import * as ReactIcons from "react-icons/fa/index.js";
interface Props {
  title: string;
  subtitle: string;
  price: string;
  items: Array<{ title: string }>;
  hosting: string;
}
const { FaCheck } = ReactIcons;
const { title, subtitle, price, items, hosting } = Astro.props;
---

<div
  class="flex flex-col w-full max-w-lg p-6 mx-auto text-center text-gray-900 bg-white border border-gray-100 rounded-lg shadow"
>
  <header>
    <h3 class="mb-2 text-2xl font-bold">{title}</h3>
    <p class="text-sm font-light text-gray-500 sm:text-base dark:text-gray-400">
      {subtitle}
    </p>
    <span class="block my-4 text-5xl font-extrabold sm:text-6xl">${price}</span>
  </header>
  <ul role="list" class="flex-1 mb-4 space-y-4 text-sm text-left">
    {
      items.map((item) => (
        <li class="flex items-center space-x-3">
          <FaCheck className="w-5 h-5 text-green-500" />
          <span>{item.title}</span>
        </li>
      ))
    }
  </ul>
  <a href="#" class="!w-full btn btn-gradient !border-transparent"
    >Get started</a
  >
  <p class="mt-3 text-sm text-gray-500">{hosting}</p>
</div>
