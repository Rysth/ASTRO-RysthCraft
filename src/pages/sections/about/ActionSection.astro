---
import Section from "../../../layouts/Section.astro";
import Link from "../../../components/ui/Link/Link.astro";
---

<Section>
  <div class="py-6 sm:pb-16">
    <div class="px-4 mx-auto max-w-screen-2xl md:px-8">
      <div class="flex flex-col items-center max-w-xl mx-auto text-center">
        <p
          class="mb-4 font-semibold text-indigo-500 md:mb-6 md:text-lg xl:text-xl"
        >
          Let's Build Something Great!
        </p>

        <h1
          class="mb-8 text-3xl font-bold text-white sm:text-4xl md:mb-6 md:text-5xl"
        >
          Digital Brilliance Unleashed
        </h1>

        <div class="flex w-full flex-col gap-2.5 sm:flex-row sm:justify-center">
          <Link
            target="_blank"
            classVariant="btn btn-gradient "
            route="http://tinyurl.com/contact-wsp"
          >
            Contact
          </Link>
          <Link target="" classVariant="btn btn-secondary" route="/projects">
            Projects
          </Link>
        </div>
      </div>
    </div>
  </div>
</Section>
