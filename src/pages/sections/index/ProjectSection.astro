---
import Subtitle from "@/components/heading/Subtitle.astro";
import ProjectOne from "../../../assets/images/projects/project_1.webp";
import ProjectTwo from "../../../assets/images/projects/project_2.webp";
import ProjectThree from "../../../assets/images/projects/project_3.webp";
import ProjectCard from "@/components/ui/ProjectCard.astro";
---

<section class="p-4 bg-gradient-to-br bg-brand-gradient">
  <article class="relative max-w-screen-xl py-12 mx-auto md:py-24 md:pb-52">
    <Subtitle
      title="Galería de Proyectos"
      description="Realizamos proyectos de alta calidad y gran alcance, para asegurar el éxito de tu negocio."
      textColor="text-white"
      descriptionColor="!text-white/75"
    />
    <main
      class="left-0 right-0 grid w-full gap-4 my-12 lg:my-24 md:gap-8 lg:absolute md:-bottom-64 sm:grid-cols-2 lg:grid-cols-4"
    >
      <ProjectCard
        imageUrl={ProjectOne}
        projectUrl="https://updateec.netlify.app/"
        altText="Project Image 1"
      />
      <ProjectCard
        imageUrl={ProjectTwo}
        projectUrl="https://jprefrigeracion.netlify.app/"
        altText="Project Image 2"
      />
      <ProjectCard
        imageUrl={ProjectThree}
        projectUrl="https://react-tramitesec-uxbm.onrender.com/"
        altText="Project Image 3"
      />
    </main>
  </article>
</section>
