---
import Label from "../../../components/forms/Label/Label.astro";
---

<div
  class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto animate__animated animate__fadeIn animate__delay-1s"
>
  <div class="max-w-xl mx-auto">
    <div class="text-center">
      <h1 class="text-3xl font-bold text-white sm:text-4xl">
        Ready to contact me?
      </h1>
      <p class="mt-1 text-gray-400">
        Tell us your story and weâ€™ll be in touch.
      </p>
    </div>
    <div class="mt-12">
      <form action="https://formspree.io/f/xnqealwr" method="POST">
        <div class="grid gap-4 lg:gap-6">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:gap-6">
            <div>
              <Label text="First Name" htmlFor="first-name" />
              <input
                type="text"
                name="first-name"
                id="first-name"
                class="block w-full px-4 py-3 text-sm border-gray-200 rounded-lg focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                required
              />
            </div>
            <div>
              <Label text="Last Name" htmlFor="last-name" />
              <input
                type="text"
                name="last-name"
                id="last-name"
                class="block w-full px-4 py-3 text-sm border-gray-200 rounded-lg focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                required
              />
            </div>
          </div>
          <div>
            <Label text="Email" htmlFor="email" />
            <input
              type="email"
              name="email"
              id="email"
              autocomplete="email"
              class="block w-full px-4 py-3 text-sm border-gray-200 rounded-lg focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
              required
            />
          </div>
          <div>
            <Label text="Message" htmlFor="email" />
            <textarea
              id="message"
              name="message"
              rows="8"
              class="block w-full px-4 py-3 text-sm border-gray-200 rounded-lg resize-none focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
            ></textarea>
          </div>
        </div>
        <div class="grid mt-6">
          <button type="submit" class="btn btn-primary !w-full">Send</button>
        </div>

        <div class="mt-3 text-center">
          <p class="text-sm text-gray-400">
            We'll get back to you in 1-2 business days.
          </p>
        </div>
      </form>
    </div>
  </div>
</div>
