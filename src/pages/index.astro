---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation/Navigation.astro";
import Hero from "./sections/index/Hero.astro";
---

<Layout title="RysthCraft | Software Developer | Professional Websites">
  <Navigation />
  <Hero />
</Layout>
<style is:global>
  @import url("https://fonts.cdnfonts.com/css/poppins");

  :root {
    --CL-neutral-black: #1f1d2b;
    --CL-primary-blue: #2e3191;
  }

  body {
    font-family: "Poppins", sans-serif;
    background-color: var(--CL-neutral-black);
  }

  button,
  a {
    @apply md:hover:scale-105 md:active:scale-95 md:transition;
  }

  .btn {
    @apply block p-4 px-6 text-xs text-center rounded-lg sm:w-40 sm:text-base;
  }

  .btn-gradient {
    @apply bg-gradient-to-tl from-cyan-500 to-purple-500;
  }

  .btn-secondary {
    @apply outline outline-1 md:hover:bg-white md:hover:text-gray-900;
  }
</style>
